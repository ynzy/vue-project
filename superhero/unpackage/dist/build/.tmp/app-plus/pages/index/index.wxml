<view class="page" bind:__l="__l"><swiper class="carousel" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{3000}}" duration="{{1000}}"><block wx:for="{{carouselList}}" wx:for-item="carousel" wx:for-index="__i0__" wx:key="id"><swiper-item><navigator open-type="navigate" url="{{'../movie/movie?trailerId='+carousel.movieId}}"><image class="carousel" src="{{carousel.image}}"></image></navigator></swiper-item></block></swiper><title-bar title="{{meuntitle[0].title}}" icon="{{meuntitle[0].icon}}"></title-bar><scroll-view class="page-block hot" scroll-x="true"><block wx:for="{{hotSuperheroList}}" wx:for-item="superhero" wx:for-index="__i1__" wx:key="id"><view class="single-poster"><view class="poster-warpper"><navigator open-type="navigate" url="{{'../movie/movie?trailerId='+superhero.id}}"><image class="poster" src="{{superhero.cover}}"></image></navigator><view class="movie-name">{{superhero.name}}</view><trailer-stars innerScore="{{superhero.score}}" showNum="{{1}}"></trailer-stars></view></view></block></scroll-view><title-bar title="{{meuntitle[1].title}}" icon="{{meuntitle[1].icon}}"></title-bar><view class="hot-movies page-block"><block wx:for="{{hotTrailerList}}" wx:for-item="trailer" wx:for-index="__i2__" wx:key="id"><video class="hot-movie-single" id="{{trailer.id}}" data-playingIndex="{{trailer.id}}" src="{{trailer.trailer}}" poster="{{trailer.poster}}" controls data-event-opts="{{[['play',[['meIsPlaying',['$event']]]]]}}" bindplay="__e"></video></block></view><title-bar title="{{meuntitle[2].title}}" icon="{{meuntitle[2].icon}}"></title-bar><view class="guess-u-like page-block"><block wx:for="{{guessULikeList}}" wx:for-item="guess" wx:for-index="gIndex" wx:key="id"><view class="single-like-movie"><navigator open-type="navigate" url="{{'../movie/movie?trailerId='+guess.id}}"><image class="like-movie" src="{{guess.cover}}"></image></navigator><view class="movie-desc"><view class="movie-title">{{guess.name}}</view><trailer-stars innerScore="{{guess.score}}" showNum="{{0}}"></trailer-stars><view class="movie-info">{{guess.basicInfo}}</view><view class="movie-info">{{guess.releaseDate}}</view></view><view class="movie-oper" data-gIndex="{{gIndex}}" data-event-opts="{{[['tap',[['praiseMe',['$event']]]]]}}" bindtap="__e"><image class="praise-ico" src="../../static/icos/praise.png"></image><view class="praise-me">点赞</view><view class="praise-me animation-opacity" animation="{{animationDataArr[gIndex]}}">+1</view></view></view></block></view></view>